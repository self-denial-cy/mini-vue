{
  "version": "1.0.1",
  "scripts": {
    "precommit": "npm run precommit:exercise1 && npm run precommit:exercise2 && npm run precommit:exercise3",
    "precommit:exercise1": "lint-staged --cwd exercise1",
    "precommit:exercise2": "lint-staged --cwd exercise2",
    "precommit:exercise3": "lint-staged --cwd exercise3",
    "commitmsg": "validate-commit-msg",
    "preversion": "git pull --tags -f",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "postversion": "git push && git push origin --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/self-denial-cy/mini-vue.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/self-denial-cy/mini-vue/issues"
  },
  "homepage": "https://github.com/self-denial-cy/mini-vue#readme",
  "devDependencies": {
    "conventional-changelog-cli": "^1.2.0",
    "husky": "^0.13.1",
    "lint-staged": "^13.1.0",
    "validate-commit-msg": "^2.11.1"
  }
}
